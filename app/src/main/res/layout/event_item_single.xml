<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@drawable/event_item_background"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <com.oxapps.materialcountdown.view.CircularIconImageView
        android:id="@+id/adapterLogoSingle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        tools:background="@color/material_red_500"
        tools:src="@drawable/ic_new_event" />

    <TextView
        android:id="@+id/adapterEventNameSingle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="72dp"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        tools:text="Event Name" />

    <RelativeLayout
        android:id="@+id/rl_event_days"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="16dp">

        <TextView
            android:id="@+id/adapterTimeCountSingle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="22" />

        <TextView
            android:id="@+id/adapterTimeTextSingle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="16dp"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            tools:text="@string/days_remaining" />
    </RelativeLayout>


</RelativeLayout>